<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">
    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to "Meals", meals_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "New Meal", new_meal_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>

