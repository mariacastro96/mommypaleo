<%= form_with model: @ingredient, role: 'form', class: 'form-horizontal', local: true do |f| %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' do %>
    Nome <span class="text-danger">*</span>
    <% end %>
    <div class="col-sm-10">
      <%= f.select :name, options_for_select(Ingredient::INGREDIENTS.map { |ingredient| [ingredient]}), {}, {class: "form-control"} %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-10">
      <td><%= f.hidden_field :meal_id, value: params[:meal_id] %></td>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :portion, class: 'col-sm-2 control-label' do %>
    Quantidade <span class="text-danger">*</span>
    <% end %>
    <div class="col-sm-10">
      <%= f.select :portion, options_for_select(Ingredient::PORTIONS.map { |portion| [portion]}), {}, {class: "form-control"} %>
    </div>
  </div>

      <div class="row">
        <div class="col-sm-offset-2 col-sm-10 m-t-15">
          <%= f.submit 'guardar', class: 'btn ' %>
          <%= link_to 'cancelar', meals_path, class: "btn " %>
        </div>
      </div>
    </div>
  <% end %>
